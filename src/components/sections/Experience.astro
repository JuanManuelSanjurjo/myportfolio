---
import Gallery from "../Gallery"
const { experience } = Astro.props;
---

<section  class="index-section" id="experience">
  <div class="container">
    <h2>EXPERIENCE</h2>
    <hr>
    <h5> <i class="i-projects">Live demos and other projects on <a style="text-decoration: underline" target="_blank" href="https://github.com/JuanManuelSanjurjo">Github</a></i> </h5>
    <div class="experience-container">
      { experience.map(({title, employer, location, summary, responsabilities, achievments}) => (
      <div>
        <h3> {title} </h3>
        <h5 > {employer} - {location} </h5>
        <p> {summary} </p>
        <h4 class="subtitle"> Key responsibilities </h4>
        <ul class="ul-experience">
          {responsabilities.map((resp, i) => (<li>{resp}</li>))}
        </ul>
        <h4 class="subtitle"> Achievments </h4>
        <ul class="ul-experience">
          {achievments.map((resp, i) => (<li>{resp}</li>))}
        </div>

      </div>
      ))
      }
    </div>
  </div>
</section>
